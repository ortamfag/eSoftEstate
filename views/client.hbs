{{#if AlertDelete}}
<div class="alert alert-danger d-flex align-items-center" role="alert">
    {{AlertDelete}}
</div>
{{/if}}

<a class="addClient" href="/addClient">Добавить нового клиента</a>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">Фамилия</th>
      <th scope="col">Отчество</th>
      <th scope="col">E-mail</th>
      <th scope="col">Телефон</th>
      <th scope="col">Действия</th>
    </tr>
  </thead>

  <tbody>
    {{#each rows}}
    <tr>
      <td>{{this.firstName}}</td>
      <td>{{this.lastName}}</td>
      <td>{{this.patronymic}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>
        <a href="/editClientView/{{this.id}}" type="button">Изменить</a>
        <form class="row g-3 needs-validation" method="POST" action="/deleteClientAction/{{this.id}}" novalidate>
            <button class="noButton" type="submit">Удаление</button>
        </form>
        <a href="/clientActivityView/{{this.id}}" type="button">Активность</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>